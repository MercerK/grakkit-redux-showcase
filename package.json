{
  "author": "Kyle Mercer",
  "name": "grakkit-boilerplate",
  "description": "Boilerplate impl. using Babel, Webpack, and TypeScript",
  "license": "MIT",
  "version": "1.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/MercerK/grakkit-redux-showcase"
  },
  "keywords": [
    "grakkit",
    "redux",
    "minecraft"
  ],
  "dependencies": {
    "@grakkit/stdlib-paper": "^1.0.12",
    "@reduxjs/toolkit": "^1.7.1",
    "grakkit-boilerplate-util": "^0.0.20",
    "lodash": "^4.17.21",
    "socketcluster-client": "13.0.0",
    "ws": "^8.5.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.3",
    "@babel/core": "^7.14.3",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.14.2",
    "@babel/preset-typescript": "^7.13.0",
    "@redux-devtools/cli": "^1.0.6",
    "@types/lodash": "^4.14.178",
    "@types/node": "^16.4.6",
    "@types/socketcluster-client": "13",
    "@types/ws": "^8.2.2",
    "babel-loader": "^8.2.2",
    "babel-plugin-add-module-exports": "^1.0.4",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "concurrently": "^7.0.0",
    "got": "^11.8.2",
    "nodemon": "^2.0.15",
    "ts-node": "^10.0.0",
    "typescript": "^4.5.5",
    "webpack": "^5.37.0",
    "webpack-cli": "^4.7.0"
  },
  "scripts": {
    "start:server": "cd server & java -Xms2G -Xmx2G -jar server.jar -nogui",
    "start:js": "ts-node --project tsconfig-node.json ./scripts/start",
    "start": "concurrently \"npm run start:server\" \"npm run start:js\"",
    "build": "webpack --env production",
    "devtools:server": "redux-devtools --hostname=localhost --port=8000 --open",
    "devtools:connect": "ts-node --project tsconfig-node.json ./scripts/reduxDevTools/index",
    "devtools:all": "concurrently \"npm run devtools:server\" \"npm run devtools:connect\""
  }
}
